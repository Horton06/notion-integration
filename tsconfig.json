{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./api",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*", "services/**/*"],
  "exclude": ["node_modules"]
}